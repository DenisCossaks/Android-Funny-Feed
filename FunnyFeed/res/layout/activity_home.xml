<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/boardLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1c1c1c"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/btnTimeline"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/img_btn_timeline_nor" />

                <ImageView
                    android:id="@+id/layoutTimelineSel"
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="top"
                    android:background="@drawable/layout_select" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/btnSubmit"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/img_btn_submit_nor" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/btnFaq"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/img_btn_faq_nor" />

                <ImageView
                    android:id="@+id/layoutFaqSel"
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="top"
                    android:background="@drawable/layout_select" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>